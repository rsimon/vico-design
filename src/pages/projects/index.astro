---
import { Icon } from 'astro-iconify';
import DashboardLayout from '@layouts/dashboard/BaseLayout.astro';
---
<DashboardLayout title="My Projects" active="projects">
  <main>
    <div>
      <p>
        You have no annotation projects yet.
      </p>

      <div class="cta">
        <a class="button primary" href="/projects/the-odyssey">
          <Icon name="ph:plus" /> <span>Create Your First Project</span>
        </a>

        <a class="button" href="#">
          Read the Tutorial
        </a>
      </div>
    </div>
  </main>
</DashboardLayout>

<style>
  main {
    align-items: center;
    display: flex;
    height: 100%; 
    justify-content: center;
    text-align: center;
  }

  p {
    margin: 0;
    padding: 0 0 30px 0;
  }

  .cta {
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>

